{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "lestin",
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly"
				}
			}
		],
	}
}
